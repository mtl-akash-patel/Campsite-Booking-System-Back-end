<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Booking" table = "BOOKINGS">

        <meta attribute = "class-description">
            This class contains the booking details.
        </meta>

        <id name = "bookingId" column = "BOOKING_ID"  type = "int">
            <generator class="native"/>
        </id>

        <property name = "userId" column = "USER_ID" type = "int"/>
        <property name = "arrivalDate" column = "ARRIVAL_DATE" type = "date"/>
        <property name = "departureDate" column = "DEPARTURE_DATE" type = "date"/>

    </class>
</hibernate-mapping>